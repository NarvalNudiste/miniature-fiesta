<Window x:Class="Othello.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Othello"
        mc:Ignorable="d"
        Title="Menu" Height="169.775" Width="198.714">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Height="auto"  VerticalAlignment="Top" Width="100">
            <Button Content="New Game" HorizontalAlignment="Center"  VerticalAlignment="Center" Width="75" Margin="0,20,0,0" Click="new_game"/>
            <Button Content="Load Game" HorizontalAlignment="Center"  VerticalAlignment="Center" Width="75" Margin="0,20,0,0" Click="load_game" />
            <Button Content="Exit" HorizontalAlignment="Center"  VerticalAlignment="Center" Width="75" Margin="0,20,0,0" Click="exit_game"/>
        </StackPanel>
    </Grid>
</Window>
